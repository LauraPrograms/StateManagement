
@{
    ViewBag.Title = "ListItem";
}

<h2>List Item</h2>
<table class="table-bordered">
    <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Price  </th>
        <th>  Amount</th>


    </tr>
    @foreach (var item in ViewBag.ItemsList)
    {
        <tr>
            <td>@item.ItemName</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td> <input id=@item.ItemID type="number" min="1" max="1000" value="1" name="Amount"/></td>
            <td><a href="" onclick='
                    this.href="/Home/AddItem?itemName=@item.ItemName&Amount="+document.getElementById("@item.ItemID").value
                    '
                    >Add to Cart </a>
            </td>
           

        </tr>


    }
</table>

<h4>Items in Shopping Cart = @ViewBag.TotalItems</h4>

@if (ViewBag.CurrentUser != null)
{


<p>
    @Html.ActionLink("Log out", "LogOut", "Home")  |
    
    @Html.ActionLink("Shopping Cart", "ViewCart", "Home")
</p>

}


